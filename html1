<script>
let currentBrand = "";

const brands = {
    chaser: {
        desc: "CHASER ‚Äî —è—Å–∫—Ä–∞–≤—ñ —Å–æ–ª—å–æ–≤—ñ –∂–∏–∂–∫–∏ –∑ —Ñ—Ä—É–∫—Ç–æ–≤–∏–º–∏ —Ç–∞ –Ω–∞–ø—ñ–π–Ω–∏–º–∏ –º—ñ–∫—Å–∞–º–∏ –¥–ª—è POD-—Å–∏—Å—Ç–µ–º.",
        flavors: ["Bubblegum","Triple Berry","Triple Raspberry","Energy Grape","Pink Lemonade","Bali","Mojito","Watermelon Lemon"]
    },
    elf: {
        desc: "ELF_LIQ ‚Äî –ª–µ–≥–µ–Ω–¥–∞—Ä–Ω—ñ —Å–º–∞–∫–∏ –æ–¥–Ω–æ—Ä–∞–∑–æ–∫ Elf Bar —É —Ñ–æ—Ä–º–∞—Ç—ñ —Ä—ñ–¥–∏–Ω–∏ –¥–ª—è –∑–∞–ø—Ä–∞–≤–∫–∏.",
        flavors: ["Blueberry","Pink Lemonade","Cherry Cola","Sour Apple","Blue Razz Lemonade","Mango","Strawberry Kiwi","Spearmint"]
    },
    phantom: {
        desc: "PHANTOM ‚Äî –ø–æ—Ç—É–∂–Ω—ñ —Å–æ–ª—å–æ–≤—ñ —Ä—ñ–¥–∏–Ω–∏ –∑ —Ö–æ–ª–æ–¥–Ω–∏–º–∏ –Ω–æ—Ç–∞–º–∏ —Ç–∞ –º º—è–∫–∏–º —É–¥–∞—Ä–æ–º.",
        flavors: ["Berry","Blueberry Ice","Cherry Menthol","Currant Ice","RedBull Ice","Raspberry","Watermelon","Spearmint"]
    }
};

function openBrand(name){
    currentBrand = name;
    document.getElementById("content").style.display = "block";
    showDesc();
}

function showDesc(){
    hideAll();
    const el = document.getElementById("desc");
    el.style.display = "block";
    el.innerHTML = "<p>"+brands[currentBrand].desc+"</p>";
}

function showFlavors(){
    hideAll();
    const el = document.getElementById("flavors");
    el.style.display = "block";
    el.innerHTML = brands[currentBrand].flavors
        .map(f => "<div>‚Ä¢ " + f + "</div>")
        .join("");
}

function hideAll(){
    document.getElementById("desc").style.display = "none";
    document.getElementById("flavors").style.display = "none";
}
</script>

